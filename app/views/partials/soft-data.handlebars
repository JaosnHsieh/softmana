<div ng-controller="Ctrl">

<form editable-form name="myform">

    <div>

        <span editable-text="user.name">
            {[{ user.name || 'name' }]}
        </span>

         <span editable-text="user.age">
            {[{ user.age || 'age' }]}
        </span>

          <div>
      <!-- button to show form -->
      <button type="button" class="btn btn-default" ng-click="myform.$show()" ng-show="!myform.$visible">
        Edit
      </button>
      <!-- buttons to submit / cancel form -->
      <span ng-show="myform.$visible">
        <button type="submit" class="btn btn-primary" ng-disabled="myform.$waiting">
          Save
        </button>
        <button type="button" class="btn btn-default" ng-disabled="myform.$waiting" ng-click="myform.$cancel()">
          Cancel
        </button>
      </span>
    </div>

    </div>

</form>

    <div style="border:2px solid red;">
       papers: <br>
        {{papers}}
        {[{1+2}]}

  <a href="#" editable-text="user.name" e-label="User Name">{[{ user.name || 'empty' }]}</a>


    </div>
   
  
   <table class="table table-bordered table-hover table-condensed">
    <tr style="font-weight: bold">
      <td>軟體別</td>
      <td>軟體編號</td>
      <td>原軟體編號</td>
      <td>軟體名稱</td>
      <td>數量</td>
      <td>金額</td>
      <td>啟用日期</td>
      <td>保管單位</td>
      <td>保管人</td>
      <td>盤點備註</td>
      <td>處置方式</td>
      <td>處置方式</td>
      <td>操控鈕</td>
    </tr>


    <tr ng-repeat="data in softData">
        
      

        <td>
           <span editable-text="data.SOFT_BATCH_NUM" e-form="textBtnForm">
                 {[{ data.SOFT_BATCH_NUM || 'empty' }]}
            </span>                       
        </td>

        <td>
           <span editable-text="data.STATUS_TYPE" e-form="textBtnForm">
                 {[{ data.STATUS_TYPE || 'empty' }]}
            </span>                       
        </td>
        
        <td>
            <button class="btn btn-default" ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible">
                edit
            </button>
        </td>

    </tr>



  </table>



</div>