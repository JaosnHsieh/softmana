<div class="container">
            <form class="form-horizontal" action="/login" method="POST">

                <div class="form-group">
                    <label class="control-label col-sm-4" for="username">帳號:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="username" id="username" placeholder="輸入帳號"  value="admin">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="pwd">密碼:</label>
                    <div class="col-sm-4" >
                        <input type="password" class="form-control" name="pwd" id="pwd" placeholder="輸入密碼"  value="">
                    </div>
                </div>
                
                <div class="form-group">
                  <label for="sel1" class="control-label col-sm-4"></label>
                     <div class="col-sm-2" >
                        <select class="form-control" id="sel1">
                            <option>一般使用者</option>
                            <option>管理者</option>
                            
                        </select>
                     </div>
                </div>

                <div class="form-group"> 
                    <div class="col-sm-offset-5 col-sm-4">
                     <button type="submit" class="btn btn-default btn-lg">登入</button>
                    </div>
                </div>
            </form>
</div>